<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presentation.NewPasswordFragment.NewPasswordFragment">

    <EditText
        android:id="@+id/password_length"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Password length"
        android:inputType="number"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <CheckBox
        android:id="@+id/use_uppercase_checkbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Use uppercase"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/password_length" />

    <CheckBox
        android:id="@+id/use_numbers_checkbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Use numbers"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/use_uppercase_checkbox" />

    <CheckBox
        android:id="@+id/use_special_chars_checkbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Use special characters"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/use_numbers_checkbox" />

    <Button
        android:id="@+id/generate_password_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Generate password"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/use_special_chars_checkbox" />

    <EditText
        android:id="@+id/generated_password_field"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:enabled="false"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/generate_password_button" />

    <TextView
        android:id="@+id/password_entropy_field"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/generated_password_field" />

    <Button
        android:id="@+id/save_password_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Save password"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/password_entropy_field" />

    <Button
        android:id="@+id/load_passwords_from_file_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Load passwords from file"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/save_password_button" />

</androidx.constraintlayout.widget.ConstraintLayout>