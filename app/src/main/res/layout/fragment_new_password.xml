<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".presentation.new_password_fragment.NewPasswordFragment">

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/password_length_layout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="@string/password_length"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/password_length"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number" />
    </com.google.android.material.textfield.TextInputLayout>

    <CheckBox
        android:id="@+id/use_uppercase_checkbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/use_uppercase"
        app:layout_constraintTop_toBottomOf="@id/password_length_layout"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="12dp" />

    <CheckBox
        android:id="@+id/use_numbers_checkbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/use_numbers"
        app:layout_constraintTop_toBottomOf="@id/use_uppercase_checkbox"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="8dp" />

    <CheckBox
        android:id="@+id/use_special_chars_checkbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/use_special_characters"
        app:layout_constraintTop_toBottomOf="@id/use_numbers_checkbox"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="8dp" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/generate_password_button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/generate_password"
        app:layout_constraintTop_toBottomOf="@id/use_special_chars_checkbox"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/generated_password_layout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="@string/generated_password"
        app:layout_constraintTop_toBottomOf="@id/generate_password_button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="12dp">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/generated_password_field"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:enabled="false" />
    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:id="@+id/password_entropy_field"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/entropy_0_0"
        android:textAppearance="?attr/textAppearanceBody2"
        app:layout_constraintTop_toBottomOf="@id/generated_password_layout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/save_password_button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/save_password"
        app:layout_constraintTop_toBottomOf="@id/password_entropy_field"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/load_passwords_from_file_button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/load_passwords_from_file"
        app:layout_constraintTop_toBottomOf="@id/save_password_button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="12dp" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/baseline_password_24"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/load_passwords_from_file_button" />

</androidx.constraintlayout.widget.ConstraintLayout>
